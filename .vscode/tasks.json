{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/matrix",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        
    ]
}